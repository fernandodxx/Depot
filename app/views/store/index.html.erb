<div class="w-full">
  <%= render 'notice' %>
 
  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2"> <%= t('.title_html') %>
    <p class="inline-block text-lg  font-normal right-44 absolute ">
      <% if cookies[:counter] > 5 %>
        <%= pluralize(cookies[:counter], 'accesses to the catalog') %>
      <% end %>
    </p>
  </h1>

  <%= turbo_stream_from 'products' %>
  
  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
    
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
